@page "/"
@using CutMp3.Domain.Models

<EditForm Model="@downloadSettings">
    <div class="form-group row">
        <label for="url" class="col-sm-2 col-form-label">
            Url
        </label>
        <div class="col-sm-10">
            <InputText id="url" class="form-control" placeholder="Url"
                       @bind-Value="downloadSettings.Url" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit" @onclick=HandleSubmit>Submit</button>
</EditForm>

@code {
    private DownloadSettings downloadSettings = new();

    public async Task HandleSubmit()
    {
        await Task.Delay(1000);
    }
}